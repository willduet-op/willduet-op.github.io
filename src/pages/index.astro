---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---
<BaseLayout title="WILLDUET | Data Analytics and BI">
  <Header />

  <main class="container" style="padding:34px 0 22px;">
    <section class="card" style="padding:22px;">
      <div class="muted" style="display:inline-block;border:1px solid var(--border);padding:8px 12px;border-radius:999px;background:rgba(255,255,255,.04);font-size:13px;">
        US business | Analytics services and training
      </div>

      <h1 style="margin:14px 0 10px;font-size: clamp(34px, 5vw, 56px);line-height:1.02;">
        Data Analytics, BI, and Analytics Engineering
      </h1>

      <p class="muted" style="margin:0;max-width:820px;line-height:1.6;">
        I help teams build reliable metrics, dashboards, and data pipelines so they can make better decisions faster.
      </p>

      <div style="display:flex;gap:12px;flex-wrap:wrap;margin-top:18px;">
        <a class="btn btn-primary" href="/contact">Talk to me</a>
        <a class="btn" href="/services">See services</a>
      </div>
    </section>

    <section style="padding:22px 0;">
      <h2 style="margin:0 0 10px;">What I do</h2>
      <div class="grid grid-3">
        <div class="card" style="padding:18px;">
          <h3 style="margin:0 0 8px;">Business Intelligence</h3>
          <p class="muted" style="margin:0;line-height:1.6;">Dashboards, KPI definitions, reporting strategy, adoption.</p>
        </div>
        <div class="card" style="padding:18px;">
          <h3 style="margin:0 0 8px;">Analytics Engineering</h3>
          <p class="muted" style="margin:0;line-height:1.6;">dbt modeling, metric layers, data quality, incremental pipelines.</p>
        </div>
        <div class="card" style="padding:18px;">
          <h3 style="margin:0 0 8px;">Tutoring and Training</h3>
          <p class="muted" style="margin:0;line-height:1.6;">Power BI, SQL, analytics foundations, practical projects.</p>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
