---
const nav = [
  { href: "/", label: "Home" },
  { href: "/services", label: "Services" },
  { href: "/contact", label: "Contact" },
];
---
<header style="position:sticky;top:0;z-index:20;backdrop-filter:blur(10px);background:rgba(7,22,44,.55);border-bottom:1px solid var(--border);">
  <div class="container" style="display:flex;align-items:center;justify-content:space-between;gap:14px;padding:14px 0;">
    <a href="/" style="display:flex;align-items:center;gap:10px;">
      <div style="width:34px;height:34px;border-radius:10px;display:grid;place-items:center;border:1px solid var(--border);background:linear-gradient(135deg, rgba(8,167,255,.25), rgba(15,208,255,.10));">â—†</div>
      <div>
        <div style="font-weight:900;letter-spacing:.04em;">WILLDUET</div>
        <div class="muted" style="font-size:12px;">Analytics and BI</div>
      </div>
    </a>

    <nav class="muted" style="display:flex;gap:16px;font-size:14px;">
      {nav.map(item => (
        <a href={item.href} style="padding:8px 10px;border-radius:10px;">
          {item.label}
        </a>
      ))}
    </nav>

    <a class="btn btn-primary" href="/contact">Book a call</a>
  </div>
</header>
